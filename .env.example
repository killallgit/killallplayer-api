# Podcast Player API Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENV=development

# Database
DATABASE_PATH=./data/podcast.db

# Podcast Index API
# Get your API credentials from https://podcastindex.org/api
PODCAST_INDEX_API_KEY=your_podcast_index_api_key_here
PODCAST_INDEX_API_SECRET=your_podcast_index_api_secret_here

# OpenAI API (for Whisper transcription)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Override default paths if installed in custom locations
# FFMPEG_PATH=/usr/local/bin/ffmpeg
# FFPROBE_PATH=/usr/local/bin/ffprobe
# AUDIOWAVEFORM_PATH=/usr/local/bin/audiowaveform

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Storage
TEMP_DIR=./tmp
CACHE_DIR=./cache

# Optional: Monitoring
ENABLE_METRICS=false
ENABLE_PPROF=false

# Optional: Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=10

# Optional: CORS (for web clients)
CORS_ENABLED=true
CORS_ORIGINS=*

# Optional: Whisper Configuration
WHISPER_MODEL=whisper-1
WHISPER_LANGUAGE=en
WHISPER_MONTHLY_QUOTA=100.0

# Optional: Processing Configuration
PROCESSING_WORKERS=2
MAX_CONCURRENT_JOBS=5

# Feature Flags
ENABLE_TRANSCRIPTION=true
ENABLE_WAVEFORM=true
ENABLE_TAGGING=true
ENABLE_CACHING=true
MAINTENANCE_MODE=false