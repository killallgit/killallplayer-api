# Podcast Player API Configuration
# Copy this file to settings.yaml and update with your values

# Server configuration
server:
  host: "0.0.0.0"
  port: 8080

# Database configuration
database:
  path: "./data/podcast.db"

# Podcast Index API credentials (required for podcast discovery)
podcast_index:
  api_key: "YOUR_API_KEY_HERE"
  api_secret: "YOUR_API_SECRET_HERE"

# OpenAI Whisper API key (required for transcription)
whisper:
  api_key: "YOUR_OPENAI_API_KEY_HERE"

# Logging configuration
logging:
  level: "info"  # debug, info, warn, error
  format: "json" # json or text